{
  "name": "my-tailwind-project",
  "version": "1.0.0",
  "description": "A simple project using Tailwind CSS",
  "scripts": {
    "build:css": "postcss src/input.css -o style.css",
    "watch:css": "postcss src/input.css -o style.css --watch",
    "serve": "browser-sync start --server --serveStatic '.' --files '*.html', '*.css'",
    "dev": "npm-run-all --parallel watch:css serve",
    "build": "NODE_ENV=production postcss src/input.css -o style.css"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "browser-sync": "^2.29.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.0.24"
  }
}